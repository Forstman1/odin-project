

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  creatAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  password String

  image Bytes?

  firstName String?
  lastName String?

  FriendsId Int[]
  Post Post[]


}


model Post {
  id Int @id @default(autoincrement())
  creatAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  image String?
  description String?

  usersId Int

  user User @relation(fields: [usersId], references: [id], onDelete: Cascade)

}


model Comment {
  id Int @id @default(autoincrement())
  creatAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  comment String?

  usersId Int

}


model Like {
  id Int @id @default(autoincrement())
  creatAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  usersId Int


}